            Description:  <input type="text" name="Description" value="<%=Art.Description%>" /><br />
            Rarity:  <input type="text" name="Rarity" value="<%=Art.Rarity%>" /><br />
            Image:  <input type="img" name="Image" value="<%=Art.Image%>" /><br />
            Price:  <input type="number" name="Price" value="<%=Art.Price%>" /><br />
            Quantity:  <input type="number" name="Quantity" value="<%=Art.Quantity%>" /><br />
            <br />
            <input type="submit" value="Commit Changes">
